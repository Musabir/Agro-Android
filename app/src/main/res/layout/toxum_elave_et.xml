<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_marginTop="7dp"
        android:id="@+id/Layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/xidmet_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/profile"
                />



            <android.support.design.widget.TextInputEditText
                android:id="@+id/ad_soyad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:textColor="#777777"
                android:hint="Ad Soyad"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/xidmet_icon"
                android:background="@android:color/transparent"/>
        </RelativeLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_centerVertical="true"
            android:background="#72CFFF" />
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/toxum_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/ic_seed_icon"
                />



            <android.support.design.widget.TextInputEditText
                android:id="@+id/toxumun_adi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:textColor="#777777"
                android:hint="Toxumun adı"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/toxum_icon"
                android:background="@android:color/transparent"/>
        </RelativeLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_centerVertical="true"
            android:background="#72CFFF" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/sort_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/ic_seed_type"
                />



            <android.support.design.widget.TextInputEditText
                android:id="@+id/sort"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:textColor="#777777"
                android:hint="Toxumun sortu"
                android:layout_width="match_parent"

                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/sort_icon"
                android:background="@android:color/transparent"/>
        </RelativeLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_centerVertical="true"
            android:background="#72CFFF" />

        <RelativeLayout
            android:id="@+id/city_lyt"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="6dp"
                android:id="@+id/city_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/city"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Şəhər"
                android:textSize="18dp"
                android:textColor="#777777"
                android:id = "@+id/txt2"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/city_icon"
                android:layout_toEndOf="@+id/city_icon" />
            <ImageView
                android:id="@+id/right1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@drawable/right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp" />


        </RelativeLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_centerVertical="true"
            android:background="#72CFFF" />

        <RelativeLayout
            android:id="@+id/phone_num_layout"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/number_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/contact"
                android:tint="#72CFFF"
                />


            <android.support.design.widget.TextInputEditText
                android:id="@+id/phoneName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:textColor="#777777"
                android:hint="Nömrə"
                android:layout_toRightOf="@+id/number_icon"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"/>


        </RelativeLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_centerVertical="true"
            android:background="#72CFFF" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/emailaddress_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/message"
                />



            <android.support.design.widget.TextInputEditText
                android:id="@+id/emailtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:textColor="#777777"
                android:hint="Email"
                android:layout_toRightOf="@+id/emailaddress_icon"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"/>

        </RelativeLayout>
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_centerVertical="true"
            android:background="#72CFFF" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/price_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/ic_price"
                />



            <android.support.design.widget.TextInputEditText
                android:id="@+id/qiymettxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:textColor="#777777"
                android:hint="Qiymət/kq"
                android:layout_toRightOf="@+id/price_icon"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"/>

        </RelativeLayout>
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_centerVertical="true"
            android:background="#72CFFF" />




        <Button
            android:layout_gravity="bottom"
            android:layout_marginTop="50dp"
            android:textColor="#FFFFFF"
            android:textSize="21dp"
            android:id="@+id/submit"
            android:background="#72CFFF"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Təstiqlə"
            android:layout_weight="1"
            android:textAllCaps="false"
            />

    </LinearLayout>

</ScrollView>